        "500": "#64748b",
        "600": "#475569",
        "700": "#334155",
        "800": "#1e293b",
        "900": "#0f172a",
        "950": "#020617",
        "description": "Professional gray - neutral, sophisticated, accessible"
      },
      "accent": {
        "50": "#fef2f2",
        "100": "#fee2e2",
        "200": "#fecaca",
        "300": "#fca5a5",
        "400": "#f87171",
        "500": "#ef4444",
        "600": "#dc2626",
        "700": "#b91c1c",
        "800": "#991b1b",
        "900": "#7f1d1d",
        "950": "#450a0a",
        "description": "Humanitarian red - urgency, compassion, action-oriented"
      },
      "success": {
        "50": "#f0fdf4",
        "100": "#dcfce7",
        "200": "#bbf7d0",
        "300": "#86efac",
        "400": "#4ade80",
        "500": "#22c55e",
        "600": "#16a34a",
        "700": "#15803d",
        "800": "#166534",
        "900": "#14532d",
        "950": "#052e16",
        "description": "Hope green - positive outcomes, growth, success"
      },
      "warning": {
        "50": "#fffbeb",
        "100": "#fef3c7",
        "200": "#fde68a",
        "300": "#fcd34d",
        "400": "#fbbf24",
        "500": "#f59e0b",
        "600": "#d97706",
        "700": "#b45309",
        "800": "#92400e",
        "900": "#78350f",
        "950": "#451a03",
        "description": "Attention orange - important notices, moderate urgency"
      },
      "neutral": {
        "50": "#fafafa",
        "100": "#f5f5f5",
        "200": "#e5e5e5",
        "300": "#d4d4d4",
        "400": "#a3a3a3",
        "500": "#737373",
        "600": "#525252",
        "700": "#404040",
        "800": "#262626",
        "900": "#171717",
        "950": "#0a0a0a",
        "description": "Pure neutral - clean backgrounds, subtle text"
      }
    },

    "typography": {
      "fontFamily": {
        "primary": "Inter, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "arabic": "Tajawal, 'Noto Sans Arabic', system-ui, sans-serif",
        "display": "Inter, system-ui, sans-serif"
      },
      "fontWeights": {
        "light": 300,
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700,
        "extrabold": 800
      },
      "fontSizes": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem",
        "6xl": "3.75rem",
        "7xl": "4.5rem"
      },
      "lineHeights": {
        "tight": 1.25,
        "normal": 1.5,
        "relaxed": 1.75
      }
    },

    "spacing": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem",
      "4xl": "6rem",
      "5xl": "8rem"
    },

    "borderRadius": {
      "sm": "0.25rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem",
      "2xl": "1rem",
      "3xl": "1.5rem",
      "full": "9999px"
    },

    "shadows": {
      "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
      "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
      "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
      "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)",
      "glow": "0 0 20px rgba(59, 130, 246, 0.15)",
      "glow-accent": "0 0 20px rgba(239, 68, 68, 0.15)"
    }
  },

  "components": {
    "buttons": {
      "primary": {
        "background": "bg-primary-600",
        "text": "text-white",
        "hover": "hover:bg-primary-700",
        "focus": "focus:ring-primary-500",
        "shadow": "shadow-md",
        "description": "Main call-to-action buttons - donate, join, register"
      },
      "secondary": {
        "background": "bg-secondary-600",
        "text": "text-white",
        "hover": "hover:bg-secondary-700",
        "focus": "focus:ring-secondary-500",
        "shadow": "shadow-md",
        "description": "Secondary actions - learn more, explore"
      },
      "accent": {
        "background": "bg-accent-500",
        "text": "text-white",
        "hover": "hover:bg-accent-600",
        "focus": "focus:ring-accent-500",
        "shadow": "shadow-md",
        "description": "Urgent actions - emergency donations, critical programs"
      },
      "outline": {
        "background": "bg-transparent",
        "text": "text-primary-600",
        "border": "border-2 border-primary-600",
        "hover": "hover:bg-primary-50",
        "focus": "focus:ring-primary-500",
        "description": "Subtle actions - secondary navigation, form submissions"
      },
      "ghost": {
        "background": "bg-transparent",
        "text": "text-secondary-600",
        "hover": "hover:bg-secondary-50",
        "focus": "focus:ring-secondary-500",
        "description": "Minimal actions - navigation, tertiary actions"
      }
    },

    "cards": {
      "default": {
        "background": "bg-white",
        "border": "border border-neutral-200",
        "shadow": "shadow-sm",
        "hover": "hover:shadow-md hover:-translate-y-1",
        "description": "Standard content cards"
      },
      "elevated": {
        "background": "bg-white",
        "border": "border border-neutral-200",
        "shadow": "shadow-md",
        "hover": "hover:shadow-lg hover:-translate-y-2",
        "description": "Featured content, important information"
      },
      "accent": {
        "background": "bg-gradient-to-br from-accent-50 to-accent-100",
        "border": "border border-accent-200",
        "shadow": "shadow-sm",
        "hover": "hover:shadow-md hover:-translate-y-1",
        "description": "Urgent calls-to-action, emergency information"
      },
      "glass": {
        "background": "bg-white/80 backdrop-blur-md",
        "border": "border border-white/20",
        "shadow": "shadow-lg",
        "description": "Overlay content, modals, floating elements"
      }
    },

    "sections": {
      "hero": {
        "background": "bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800",
        "text": "text-white",
        "padding": "py-24 lg:py-32",
        "description": "Main landing sections with strong visual impact"
      },
      "content": {
        "background": "bg-white",
        "text": "text-neutral-900",
        "padding": "py-16 lg:py-24",
        "description": "Standard content sections"
      },
      "accent": {
        "background": "bg-gradient-to-br from-accent-50 via-white to-primary-50",
        "text": "text-neutral-900",
        "padding": "py-16 lg:py-24",
        "description": "Highlighted sections, testimonials, stats"
      },
      "neutral": {
        "background": "bg-neutral-50",
        "text": "text-neutral-900",
        "padding": "py-16 lg:py-24",
        "description": "Background sections, secondary content"
      }
    }
  },

  "layout": {
    "container": {
      "maxWidth": "max-w-7xl",
      "padding": "px-4 sm:px-6 lg:px-8",
      "margin": "mx-auto"
    },
    "grid": {
      "columns": {
        "1": "grid-cols-1",
        "2": "grid-cols-1 md:grid-cols-2",
        "3": "grid-cols-1 md:grid-cols-2 lg:grid-cols-3",
        "4": "grid-cols-2 md:grid-cols-4",
        "auto": "grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4"
      },
      "gap": {
        "sm": "gap-4",
        "md": "gap-6",
        "lg": "gap-8",
        "xl": "gap-12"
      }
    }
  },

  "animations": {
    "transitions": {
      "fast": "duration-200",
      "normal": "duration-300",
      "slow": "duration-500"
    },
    "effects": {
      "fadeIn": "animate-fade-in",
      "slideUp": "animate-fade-in-up",
      "scaleIn": "animate-scale-in",
      "float": "animate-float"
    }
  },

  "inspiration": {
    "unicef": {
      "website": "https://www.unicef.org",
      "strengths": [
        "Clean, trustworthy visual identity",
        "Strong use of photography",
        "Clear hierarchy and navigation",
        "Emotional storytelling through visuals",
        "Accessible color contrast",
        "Professional typography"
      ],
      "keyElements": [
        "Blue primary color (#0066CC)",
        "White backgrounds for clarity",
        "Large, impactful imagery",
        "Clear call-to-action buttons",
        "Consistent spacing and alignment"
      ]
    },
    "msf": {
      "website": "https://www.msf.org",
      "strengths": [
        "Bold, confident design",
        "Strong visual hierarchy",
        "Clear information architecture",
        "Professional credibility",
        "Accessible design patterns"
      ],
      "keyElements": [
        "Orange accent color for urgency",
        "Clean typography",
        "Grid-based layouts",
        "Consistent component patterns",
        "Strong visual storytelling"
      ]
    }
  },

  "principles": {
    "accessibility": {
      "contrast": "Minimum 4.5:1 ratio for normal text, 3:1 for large text",
      "focus": "Clear focus indicators on all interactive elements",
      "semantics": "Proper heading hierarchy and semantic HTML",
      "color": "Don't rely solely on color to convey information"
    },
    "usability": {
      "clarity": "Clear, concise messaging",
      "hierarchy": "Logical information architecture",
      "consistency": "Predictable patterns across all pages",
      "efficiency": "Minimize cognitive load and clicks"
    },
    "emotional": {
      "trust": "Professional, credible appearance",
      "hope": "Positive, uplifting imagery and messaging",
      "urgency": "Clear calls-to-action for important causes",
      "connection": "Human-centered design that builds empathy"
    }
  }
}