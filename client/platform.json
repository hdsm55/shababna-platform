{
  "name": "shababna-frontend",
  "type": "static",
  "build": {
    "flavor": "nodejs",
    "dependencies": {
      "nodejs": "18"
    }
  },
  "deploy": {
    "static": {
      "document_root": "dist",
      "index_document": "index.html",
      "error_document": "index.html"
    }
  },
  "routes": {
    "/": {
      "type": "upstream",
      "upstream": "app:http"
    },
    "/api/*": {
      "type": "redirect",
      "to": "https://shababna-backend.onrender.com/api/$1"
    }
  },
  "variables": {
    "NODE_ENV": "production"
  }
}